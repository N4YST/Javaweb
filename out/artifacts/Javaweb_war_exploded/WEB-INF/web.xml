<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.nayst.servlets.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionTest</servlet-name>
        <servlet-class>com.nayst.servlets.SessionTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionTest</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Life</servlet-name>
        <servlet-class>com.nayst.servlets.Life</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Life</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionGet</servlet-name>
        <servlet-class>com.nayst.servlets.SessionGet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionGet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SessionSet</servlet-name>
        <servlet-class>com.nayst.servlets.SessionSet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionSet</servlet-name>
        <url-pattern>/set</url-pattern>
    </servlet-mapping>
</web-app>